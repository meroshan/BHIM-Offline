<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:contentScrim="@android:color/holo_red_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bank_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_detail_card_bank_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="bottom"
                android:text="XXXXXXXX123"
                android:textColor="@color/colorPrimaryTextDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/user_detail_card_upi_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="4"
                android:gravity="top"
                android:text="9876543210@upi"
                android:textColor="@color/colorPrimaryTextDark"
                android:textSize="12sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/user_detail_card_balance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="8dp"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:padding="16dp"
            android:text="Balance"
            android:textColor="@color/colorPrimaryTextDark"
            android:textSize="24sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>