<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBrandPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LightToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ServiceButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/button_padding_medium</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="FlatButtonColored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BottomSheetButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#808080</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="background">@android:color/white</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>